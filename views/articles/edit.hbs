<div class="container">
  <form class="form" action="/articles/{{article.id}}/edit" method="POST" id="form">
    <div class="form__group">
      <label class="form__label" for="title">Название статьи:</label>
      <input class="form__input" type="text" id="title" name="title" required>
    </div>

    <div class="form__group">
      <label class="form__label" for="description">Описание:</label>
      <textarea class="form__textarea" id="description" name="description" rows="5" required></textarea>
    </div>

    <button class="form__button" type="submit">Редактировать</button>
  </form>
</div>
